<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dotcode.duoline.axdlockers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.LockersListActivity"
            android:parentActivityName=".Activities.LockerFilterActivity"
            android:theme="@style/TitleTheme"/>
        <activity
            android:name=".Activities.LockerFilterActivity"
            android:parentActivityName=".Activities.ChooseLockerActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.ChooseLockerActivity"
            android:parentActivityName=".Activities.ConfirmResidentActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.ConfirmResidentActivity"
            android:parentActivityName=".Activities.ResidentsFilteredActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.SummaryOrphanActivity"
            android:theme="@style/NoTitleTheme" />
        <activity
            android:name=".Activities.AddOrphanParcelActivity"
            android:parentActivityName=".Activities.ResidentsFilteredActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.ResidentsFilteredActivity"
            android:parentActivityName=".Activities.OCRResultActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.ImageActivity"
            android:theme="@style/NoTitleAndAnimTheme" />
        <activity
            android:name=".Activities.OCRResultActivity"
            android:parentActivityName=".Activities.MainMenuActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.ScanLabelActivity"
            android:theme="@style/NoTitleTheme" />
        <activity android:name=".Activities.FinalPostActivity" />
        <activity
            android:name=".Activities.SecurityCodeActivity"
            android:parentActivityName=".Activities.QRScanActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.AddAddressActivity"
            android:parentActivityName=".Activities.ChooseAddressActivity"
            android:theme="@style/TitleTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.ChooseAddressActivity"
            android:parentActivityName=".Activities.AddLockerActivity"
            android:theme="@style/TitleTheme" />
        <activity
            android:name=".Activities.AddLockerActivity"
            android:parentActivityName=".Activities.QRScanActivity"
            android:theme="@style/TitleTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.QRScanActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" /> <!-- <activity -->
        <!-- android:name=".LoginActivity" -->
        <!-- android:label="@string/title_activity_login" /> -->
        <activity
            android:name=".Activities.MainMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.dotcode.duoline.axdlockers"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>